<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect Albert"
        android:id="@+id/albertConnectBtn"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="알람 설정"
        android:id="@+id/Alarm_set"
        android:layout_alignBottom="@+id/albertConnectBtn"
        android:layout_toEndOf="@+id/albertConnectBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="알람 삭제"
        android:id="@+id/Alarm_Cancel"
        android:layout_alignBottom="@+id/Alarm_set"
        android:layout_toEndOf="@+id/Alarm_set" />
</RelativeLayout>
